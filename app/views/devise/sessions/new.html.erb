<div class="clearfix"></div>
<div style="margin-top: 8%; background-color: " >	
	<div class="login-form w3-card-4">
		<%= render 'layouts/messages' %><br />
		<h4 style="color: black">Sign In</h4> 
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    
		    <div class="form-group">
	        	<div class="input-group">
	                <span class="input-group-addon"><i class="fa fa-user"></i></span>
	                <%= f.input :username, required: false, label: false, placeholder: "Username" %>				
	            </div>
	        </div>
	        
	        <div class="form-group">
	            <div class="input-group">
	                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
	               	<%= f.input :password, required: false, label: false, placeholder: "Password" %>
	            </div>
	        </div>
	        
	        <div class="clearfix">
	            <label class="pull-left checkbox-inline">
	               <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
	            </label>
	        </div>
		    
		    <!-- # <%#= f.input :username, required: false, label: "Username:" %> -->
		    <!-- # <%#= f.input :password, required: false %> -->
		    <!-- # <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %> -->
		    
		  </div>
		
		  <div class="form-actions">
		  	<div class="form-group">
	            <%= f.button :submit, "Sing In", class: "btn btn-primary login-btn btn-block" %>
	        </div>
		    <!-- <%= f.button :submit, "S" %> -->
		  </div>
		<% end %>
	</div>

</div>
